pipeline {
  agent any
  environment {
    PATH = "$PATH:/opt/apache-maven-3.8.2/bin"
  }
  
stages{
stage ('Initialize') {
      steps {
        sh '''
            echo "PATH = ${PATH}"
                 echo "M2_HOME = ${M2_HOME}"
        ''' 
      }
  }
    stage ('scan'){
    steps{
      WithSonarQubeEnv('sq1'){
         sh "mvn sonar:sonar"
      }  
    }
  }
}
}
